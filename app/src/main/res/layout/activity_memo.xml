<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background="#FFFFFF"
    android:elevation="10dp"
    android:orientation="vertical"
    android:paddingTop="10dp"
    tools:context=".activities.MemoActivity">

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="제목"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/imageViewMemoActivity"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@id/editTextTitle"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <EditText
        android:id="@+id/editTextMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewMemoActivity"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="내용"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:text="" />

    <TextView
        android:id="@+id/textViewAddressActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextMain"
        android:layout_margin="10dp"
        android:text="주소" />

    <TextView
        android:id="@+id/textViewCurrentDayActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAddressActivity"
        android:layout_margin="10dp"
        android:text="날짜" />

</RelativeLayout>